name    fireball
type    none
subtype arrow
speed   14
gfxshadow 1
shadow  1
toflip  1
nolife  1
remove  0
alpha   6
stealth 1

load fireexpl

anim idle
        followanim 1
        followcond 1
	loop	1
	offset	28 10
	delay	5
    forcedirection -1
    burn    15 4 16 12 16 1 0 1
	frame	data/chars/misc/fireball/1.gif
	frame	data/chars/misc/fireball/2.gif
    burn    15 4 16 12 16 1 1 1
	frame	data/chars/misc/fireball/3.gif

anim spawn
    
    offset 0 0
    delay   1
    frame   data/chars/misc/empty.gif
    move    58
    frame   data/chars/misc/empty.gif

anim follow1
    
    custknife fireexpl
    throwframe 0 -1
    offset  28 48
    delay   1
	frame	data/chars/misc/empty.gif
@cmd killentity getlocalvar("self")
	frame	data/chars/misc/empty.gif

anim fall
    
    custknife fireexpl
    throwframe 0 -1
    offset  28 48
    delay   1
	frame	data/chars/misc/empty.gif
@cmd killentity getlocalvar("self")
	frame	data/chars/misc/empty.gif
